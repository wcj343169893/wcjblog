<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>

   <extension
         point="org.eclipse.ui.popupMenus">
      <objectContribution
            id="com.choujone.eclipse.ftp.contribution1"
            objectClass="org.eclipse.core.runtime.IAdaptable">
         <menu
               label="FTP"
               path="additions"
               id="com.choujone.eclipse.ftp.menu1">
            <separator
                  name="group1">
            </separator>
         </menu>
         <action
               class="com.choujone.eclipse.ftp.actions.UploadAction"
               id="com.choujone.eclipse.ftp.UploadAction"
               icon="icons/upload.png"
               label="上传到服务器"
               menubarPath="com.choujone.eclipse.ftp.menu1/group1">
         </action>
         <action
               class="com.choujone.eclipse.ftp.actions.AddServerAction"
               id="com.choujone.eclipse.ftp.AddServerAction"
               icon="icons/setting.png"
               label="服务器设置"
               menubarPath="com.choujone.eclipse.ftp.menu1/group1">
         </action>
      </objectContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
        <page
            class="com.choujone.eclipse.ftp.preferences.ClassftpRootPreferencePage"
            id="com.choujone.eclipse.ftp.preferences.ClassftpRootPreferencePage"
            name="Ftp Settings">
      </page>
      <page
            category="com.choujone.eclipse.ftp.preferences.ClassftpRootPreferencePage"
            class="com.choujone.eclipse.ftp.preferences.ftpsite.FtpSitePreferencePage"
            id="com.choujone.eclipse.ftp.preferences.ftpsite.FtpSitePreferencePage"
            name="ftpsite">
      </page>
   </extension>
 <extension
         point="org.eclipse.core.runtime.preferences">
      <initializer
            class="com.choujone.eclipse.ftp.preferences.PreferenceInitializer">
      </initializer>
      <initializer
            class="com.choujone.eclipse.ftp.preferences.ftpsite.PreferenceInitializer">
      </initializer>
   </extension>
</plugin>
